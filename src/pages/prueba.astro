<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>UID en Tiempo Real</title>
    <style>
      body {
        font-family: sans-serif;
        padding: 2rem;
        background-color: #f0f0f0;
      }
      #uid {
        font-size: 2rem;
        color: #222;
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <h1>UID del RFID:</h1>
    <div id="uid">Esperando datos...</div>

    <script type="module">
      const uidDiv = document.getElementById("uid");
      const socket = new WebSocket("ws://" + window.location.host + "/ws");

      socket.onopen = () => {
        console.log("WebSocket conectado");
      };

      socket.onmessage = (event) => {
        console.log("UID recibido en el navegador:", event.data);
        uidDiv.textContent = "UID recibido: " + event.data;
      };

      socket.onerror = (error) => {
        console.error("WebSocket error:", error);
      };
    </script>
  </body>
</html>
